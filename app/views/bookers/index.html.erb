<p id="notice"><%= notice %></p>

<h1>Bookers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookers.each do |booker| %>
      <tr>
        <td><%= booker.title %></td>
        <td><%= booker.body %></td>
        <td><%= link_to 'Show', booker %></td>
        <td><%= link_to 'Edit', edit_booker_path(booker) %></td>
        <td><%= link_to 'Destroy', booker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booker', new_booker_path %>
